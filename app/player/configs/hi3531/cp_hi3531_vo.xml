<?xml version="1.0" encoding="utf-8"?>
<hi3531_vo>
  <!--配置的hi3531vo内容-->
  <hi3531_vo_items>
    <hi3531_vo_item>
      <!--设备编号,取值[0, 7]:
        0:表示DHD0; 
        1:表示DHD1; 
        2:表示DSD0; 
        3:表示DSD1; 
        4:表示DSD2; 
        5:表示DSD3; 
        6:表示DSD4; 
        7:表示DSD5; -->
      <dev_id>0</dev_id>

      <!--设备通道编号-->
      <channel_id>0</channel_id>

      <!--表示源帧率信息-->
      <source_frame_rate>0</source_frame_rate>
      
      <!--内存所在DDR的名字-->
      <mem_name></mem_name>
      
      <!--设备背景色RGB888,格式:XXXXXX,例如:001122-->
      <back_color>0000CC</back_color>

      <!--接口类型,取值[0, 8]；
        0:表示CVBS; 
        1:表示YPBPR; 
        2:表示VGA; 
        3:表示BT656; 
        4:表示BT1120; 
        5:表示HDMI; 
        6:表示LCD; 
        7:表示BT656_H; 
        8:表示BT656_L; -->
      <intf_type>2</intf_type>

      <!--接口时序典型配置,取值[0, 24]:
        0:表示PAL; 
        1:表示NTSC; 
        
        2:表示1080P24; 
        3:表示1080P25; 
        4:表示1080P30; 
        
        5:表示720P50; 
        6:表示720P60; 
        7:表示1080I50; 
        8:表示1080I60; 
        9:表示1080P50;
        10:表示1080P60;
        
        11:表示576P50;
        12:表示480P60;
        
        13:表示800x600_60;
        14:表示1024x768_60;
        15:表示1280x1024_60;
        16:表示1366x768_60;
        17:表示1440x900_60;
        18:表示1280x800_60;
        19:表示1600x1200_60;
        20:表示1680x1050_60;
        21:表示1920x1200_60;
        22:表示640x480_60;
        
        23:表示USER;
        24:表示BUTT;-->
      <intf_sync>4</intf_sync>

      <!--是否需要倍帧,取值[0, 1]；0:表示不用使能；1:表示使能-->
      <enable_double_frame>0</enable_double_frame>
    </hi3531_vo_item>

    <hi3531_vo_item>
      
      <!--设备编号,取值[0, 7]:
        0:表示DHD0; 
        1:表示DHD1; 
        2:表示DSD0; 
        3:表示DSD1; 
        4:表示DSD2; 
        5:表示DSD3; 
        6:表示DSD4; 
        7:表示DSD5; -->
      <dev_id>1</dev_id>

      <!--设备通道编号-->
      <channel_id>0</channel_id>

      <!--表示源帧率信息-->
      <source_frame_rate>0</source_frame_rate>

      <!--内存所在DDR的名字-->
      <mem_name></mem_name>
      
      <!--设备背景色RGB888,格式:XXXXXX,例如:001122-->
      <back_color>0033CC</back_color>

      <!--接口类型,取值[1, 8]；
        0:表示CVBS; 
        1:表示YPBPR; 
        2:表示VGA; 
        3:表示BT656; 
        4:表示BT1120; 
        5:表示HDMI; 
        6:表示LCD; 
        7:表示BT656_H; 
        8:表示BT656_L; -->
      <intf_type>5</intf_type>

      <!--接口时序典型配置,取值[1, 25]:
        0:表示PAL; 
        1:表示NTSC; 
        
        2:表示1080P24; 
        3:表示1080P25; 
        4:表示1080P30; 
        
        5:表示720P50; 
        6:表示720P60; 
        7:表示1080I50; 
        8:表示1080I60; 
        9:表示1080P50;
        10:表示1080P60;
        
        11:表示576P50;
        12:表示480P60;
        
        13:表示800x600_60;
        14:表示1024x768_60;
        15:表示1280x1024_60;
        16:表示1366x768_60;
        17:表示1440x900_60;
        18:表示1280x800_60;
        19:表示1600x1200_60;
        20:表示1680x1050_60;
        21:表示1920x1200_60;
        22:表示640x480_60;
        
        23:表示USER;
        24:表示BUTT;-->
      <intf_sync>7</intf_sync>

      <!--是否需要倍帧,取值[0, 1]；0:表示不用使能；1:表示使能-->
      <enable_double_frame>1</enable_double_frame>
    </hi3531_vo_item>

  </hi3531_vo_items>

</hi3531_vo>