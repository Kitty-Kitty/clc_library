<?xml version="1.0" encoding="utf-8"?>
<general>
  <!--表示播放器类型，取值：video（视频）；audio（音频）-->
  <type>video</type>
  <!--控制器的名称-->
  <name>控制器</name>
  <!--表示序列号-->
  <sn>123456789</sn>
  <!--表示心跳间隔-->
  <heartbeat_interval>10s</heartbeat_interval>
  <!--硬件配置信息-->
  <hardware>
    <!--分辨率信息-->
    <resolution>
      <!--分辨率宽度-->
      <width>1366</width>
      <!--分辨率高度-->
      <height>768</height>
    </resolution>
    <!--亮度-->
    <luminance>100</luminance>
    <!--对比度-->
    <contrast>50</contrast>
    <!--背景颜色-->
    <background_color>FFFFFF</background_color>
    <!--色温-->
    <color_temp>50</color_temp>
    <!--视频码率信息，单位kbps-->
    <bitrate>50</bitrate>
  </hardware>
  
  <!--使用限制-->
  <limit>
    <!--硬盘限制-->
    <disk>100</disk>
    <!--内存限制-->
    <memory>100</memory>
    <!--cpu限制-->
    <cpu>100</cpu>
    <!--网络使用限制-->
    <network>100</network>
    <!--播放限制-->
    <play_count>128</play_count>
  </limit>
</general>